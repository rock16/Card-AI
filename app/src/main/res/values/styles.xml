<resources>

    <!-- Base application theme. -->
    <style name="AppStyle" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColor"  parent="Widget.AppCompat.Toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white_50</item>
    </style>

    <style name="Widget.Transparent.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
